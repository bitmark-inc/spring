<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitmark.fbm">

    <application
        android:name="com.bitmark.fbm.FbmApplication"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:roundIcon="${appIconRound}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".feature.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.TransparentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feature.main.MainActivity" />

        <activity
            android:name=".feature.register.onboarding.OnboardingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.TransparentStatusBar" />

        <activity
            android:name=".feature.register.archiverequest.ArchiveRequestActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.TransparentStatusBar"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".feature.register.notification.RegisterNotificationActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.TransparentStatusBar" />

        <activity android:name=".feature.account.AccountActivity" />

        <activity
            android:name=".feature.unlink.UnlinkContainerActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".feature.auth.BiometricAuthActivity" />
        <activity android:name=".feature.recovery.RecoveryContainerActivity" />

        <meta-data
            android:name="com.onesignal.NotificationAccentColor.DEFAULT"
            android:value="@color/colorAccent" />

    </application>
</manifest>
