<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_18"
        android:paddingEnd="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.bitmark.fbm.util.view.TouchableOpacityAppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_18"
        android:fontFamily="@font/domaine_sans"
        android:includeFontPadding="false"
        android:text="@string/biometric_auth"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="@dimen/sp_36"
        app:autoSizeMinTextSize="@dimen/sp_24"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutToolbar"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:fontFamily="@font/grotesk"
        android:includeFontPadding="false"
        android:scrollbars="vertical"
        android:text="@string/enable_biometric_authentication"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        app:layout_constraintEnd_toEndOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        />

    <Switch
        android:id="@+id/swBiometricAuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        app:layout_constraintStart_toStartOf="@id/tvMsg"
        app:layout_constraintTop_toBottomOf="@id/tvMsg"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSwitchMsg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:fontFamily="@font/grotesk"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:text="@string/enable_biometric_auth"
        android:textColor="@color/black"
        app:autoSizeMaxTextSize="@dimen/sp_22"
        app:autoSizeMinTextSize="@dimen/sp_18"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/swBiometricAuth"
        app:layout_constraintEnd_toEndOf="@id/tvMsg"
        app:layout_constraintStart_toEndOf="@id/swBiometricAuth"
        app:layout_constraintTop_toTopOf="@id/swBiometricAuth"
        />

</androidx.constraintlayout.widget.ConstraintLayout>