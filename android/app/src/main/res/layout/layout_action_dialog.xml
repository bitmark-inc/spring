<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans_80"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_18"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/grotesk_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_24"
            tools:text="Update Available"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:ellipsize="end"
            android:fontFamily="@font/grotesk_light"
            android:includeFontPadding="false"
            android:maxLines="10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            tools:text="A new version is available. Please update now to see the latest features.A new version is available. Please update now to see the latest features.A new version is available. "
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAction"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_36"
            android:background="@drawable/bg_cognac_stateful"
            android:fontFamily="@font/grotesk_regular_font_family"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            tools:text="@string/update_now_arrow"
            />

    </LinearLayout>

</FrameLayout>