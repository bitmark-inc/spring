<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_18"
    android:paddingEnd="@dimen/dp_18"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_2"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_cognag_line"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:fontFamily="@font/grotesk_light_font_family"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        tools:text="Close Friends of Men with a Birthday in 7-30 days Close Friends of Men with a Birthday in 7-30 days"
        />

</LinearLayout>